<% @page_title = "Admin Users" %>

<%= link_to("<< Back to menu", {:controller => "access", :action => 'index'}, :class => 'back-link') %>

<div class="admin index">
	<h2>Admin Users</h2>
	<%= link_to("Add New admin user", {:action => 'new'}, :class => 'action new')%>
	<div><%= pluralize(@users.size, 'admin user') %> found</div>
	<table class="listing" summary="Admin users list">
		<tr class="header">
			<th>User ID</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Username</th>
			<th>Actions</th>
		</tr>
		<% @users.each do |user| %>
		<tr class="<%= cycle('odd','even') %>">
			<td><%= user.id %></td>
			<td><%= user.first_name %></td>
			<td><%= user.last_name %></td>
			<td><%= mail_to(user.email) %></td>
			<td><%= user.username %></td>

			<td class="actions">
				<%= link_to("Edit", {:action => 'edit', :id => user.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => user.id}, :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>

</div>