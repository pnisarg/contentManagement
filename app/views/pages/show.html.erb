<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="pages show">
	<h2>Show Page</h2>

	<table>
		<tr>
			<th>Name</th>
			<td><%= @page.name %></td>
		</tr>
		<tr>
			<th>Permalink</th>
			<td><%= @page.permalink %></td>
		</tr>
		<tr>
			<th>Postion</th>
			<td><%= @page.position %></td>
		</tr>
		<tr>
			<th>Visible</th>
			<td><%= @page.visible ? 'True' : 'False' %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @page.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @page.updated_at %></td>
		</tr>
	</table>
</div>