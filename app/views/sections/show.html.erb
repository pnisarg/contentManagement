<%= link_to("<< Back to List", {:action => 'index', :page_id => @page.id, :subject_id => @subject.id}, :class => 'back-link') %>

<div class="sections show">
	<h2>Show Section</h2>

	<table>
		<tr>
			<th>Page Id</th>
			<td><%= @section.page_id %></td>
		</tr>
		<tr>
			<th>Name</th>
			<td><%= @section.name %></td>
		</tr>
		<tr>
			<th>content Type</th>
			<td><%= @section.content_type %></td>
		</tr>
		<tr>
			<th>content</th>
			<td><%= @section.content %></td>
		</tr>
		<tr>
			<th>Postion</th>
			<td><%= @section.position %></td>
		</tr>
		<tr>
			<th>Visible</th>
			<td><%= @section.visible ? 'True' : 'False' %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @section.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @section.updated_at %></td>
		</tr>
	</table>
</div>